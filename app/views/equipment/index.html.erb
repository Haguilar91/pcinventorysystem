<p id="notice"><%= notice %></p>

<h1>Equipment</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tag</th>
      <th>Serial</th>
      <th>Type</th>
      <th>Model</th>
      <th>Maker</th>
      <th>Details</th>
      <th>Project</th>
      <th>Ticket</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.name %></td>
        <td><%= equipment.tag %></td>
        <td><%= equipment.serial %></td>
        <td><%= equipment.type %></td>
        <td><%= equipment.model %></td>
        <td><%= equipment.maker %></td>
        <td><%= equipment.details %></td>
        <td><%= equipment.project_id %></td>
        <td><%= equipment.ticket_id %></td>
        <td><%= link_to 'Show', equipment %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

